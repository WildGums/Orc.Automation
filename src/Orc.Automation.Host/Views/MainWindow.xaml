<Window x:Class="Orc.Automation.Host.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:orcautomation="http://schemas.wildgums.com/orc/automation"
              xmlns:controls="clr-namespace:Orc.Automation.Controls;assembly=Orc.Automation"
              Height="900" Width="1000"
              AutomationProperties.AutomationId="AutomationHost"> 

    <controls:AutomationInformer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Content="Click"
                    Click="ButtonBase_OnClick"/>


            <orcautomation:TestHost x:Name="TestHost"
                                    Grid.Row="2"
                                    AutomationProperties.AutomationId="TestHostId"/>

            <TextBlock Grid.Row="3">
                <Run Text="{Binding MouseXPosition, Mode=OneWay}"/>
                <Run Text=" - "/>
                <Run Text="{Binding MouseYPosition, Mode=OneWay}"/>
            </TextBlock>
        </Grid>
    </controls:AutomationInformer>

</Window>
